<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<xacro:macro name="leggedbot_IMU" params="name">

		<ros2_control name="${name}" type="sensor">
			<hardware>
				<plugin>legged_robot/LeggedBotIMU</plugin>
  			</hardware>
  			<sensor name="imu">
				<state_interface name="msg"/>
  			</sensor>
		</ros2_control>

	</xacro:macro>

</robot>